<% layout("/layouts/boilerplate") %>

<h1 class="col-8 off-set-2">Login</h1>

<div class="row new-listing">
    <div class="col-8 off-set-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                    name="username"
                    id="username"
                    type="text"
                    class="form-control"
                    required
                    />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input 
                    name="password"
                    id="password"
                    type="password"
                    class="form-control"
                    required
                    />
            </div>
            <div class="mb-3 mt-5">
                <button class="btn btn-success col-4 offset-0">Login</button>
             </div>
        </form>
    </div>
</div>